= form_for @beverage do |f|
  - if @beverage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beverage.errors.count, "error")} prohibited this beverage from being saved:"
      %ul
        - @beverage.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :single_price
    = f.text_field :single_price
  .field
    = f.label :six_pack_price
    = f.text_field :six_price
  .actions
    = f.submit 'Save'
