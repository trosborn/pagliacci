.row
  .large-12.columns#menu-nav
    %div
      %h1
        DELIVERY MENU
        %ul
          %li
            = link_to 'Pies', '#pies'
          %li
            = link_to 'Salads', '#salads'
          %li
            = link_to 'Pasta', '#pasta'
          %li
            = link_to 'Beverages', '#beverages'
          %li
            = link_to 'Appetizers', '#appetizers'
          %li
            = link_to 'Gelatos', '#gelatos'
.row
  .large-4.columns#seasonal-pizzas
    %h2.menu-section
      SEASONAL PIZZAS
    - @seasonal_pizzas.each do |seasonal_pizza|
      %p
        %b
          = seasonal_pizza.name.upcase
        %br
        = seasonal_pizza.description
        %br
          = add_bullets_to_sizes seasonal_pizza.sizes
  .large-8.columns#toppings
    %h2.menu-section
      CREATE YOUR OWN
    .row
      .large-6.columns#veggie
        %p
          %b
            VEGETABLE TOPPINGS
          %br
          = add_commas_to_product @veggie_toppings
      .large-6.columns#cheese
        %p
          %b
            CHEESE TOPPINGS
          %br
          = add_commas_to_product @cheese_toppings
    .row
      .large-6.columns#meat
        %p
          %b
            MEAT TOPPINGS
          %br
          = add_commas_to_product @meat_toppings
.row
  .large-12.columns#pies
    .menu-section
      %h2
        PAGLIACCI FAVORITES
.row
  - @menu_pizzas.each do |menu_pizza|
    %p.medium-4.large-4.columns.menu-subsection
      %b
        = menu_pizza.name.upcase
      %br
      = menu_pizza.description
      %br
        = add_bullets_to_sizes menu_pizza.sizes
.row
  .large-12.columns#salads
    .menu-section
      %h2
        SALADS
.row
  - @salads.each do |salad|
    %p.medium-4.large-3.columns.menu-subsection
      %b
        = salad.name.upcase
      %br
      = salad.description
      %br
        = add_bullets_to_sizes salad.sizes
.row
  .large-4.columns#gelatos
    .menu-section
      %h2
        GELATOS
    %p
      Hand-crafted gelato made locally by
      = link_to 'Gelatiamo.', 'gelatiamo.com'
      Available by the pint in
      = add_commas_to_product @gelatos
  .large-4.columns#beverages
    .menu-section
      %h2
        BEVERAGES
    %p
      = add_commas_to_product @beverages
