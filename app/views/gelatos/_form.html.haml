= form_for @gelato do |f|
  - if @gelato.errors.any?
    #error_explanation
      %h2
      = pluralize(@gelato.errors.count, 'error') + ' prohibited this post from being saved'

      %ul
        - @gelato.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :name
    = f.text_area :name
    = f.label :description
    = f.text_area :description
    = f.label :dairy
    = f.check_box :dairy
  - if @gelato.persisted?
    = submit_tag 'Update'
    = link_to 'Delete', gelato_path(@gelato), method: :delete
  - else
    = submit_tag 'Create'
